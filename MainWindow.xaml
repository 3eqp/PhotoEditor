<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="350"
        Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="264*"/>
            <RowDefinition Height="41*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*" />
            <ColumnDefinition Width="500*" />
            <ColumnDefinition Width="9*" />
        </Grid.ColumnDefinitions>
        <Canvas x:Name="mainCanvas" Grid.Column="1" Grid.Row="1">
        </Canvas>
        <TextBox Margin="0,12,476,6" x:Name="text" Grid.Column="1" Grid.Row="2"/>
        <Button Height="23" HorizontalAlignment="Left" 
        Margin="174,0,0,6" Name="btnOpen" VerticalAlignment="Bottom" 
        Width="75" Grid.Column="1" Grid.Row="2" Click="btnOpen_Click">Open</Button>
        <Button Height="23" HorizontalAlignment="Left" 
            Margin="254,0,0,6" x:Name="btnSave" VerticalAlignment="Bottom" 
            Width="75" Grid.Column="1" Grid.Row="2" Content="Save" Click="btnSave_Click"/>
        <Button Height="23" HorizontalAlignment="Left" 
            Margin="334,0,0,6" x:Name="btnNewLayer" VerticalAlignment="Bottom" 
            Width="75" Grid.Column="1" Grid.Row="2" Content="NewLayer" Click="btnNewLayer_Click"/>
        <Button Height="23" HorizontalAlignment="Left" 
            Margin="414,0,0,6" x:Name="btnDeleteLayer" VerticalAlignment="Bottom" 
            Width="75" Grid.Column="1" Grid.Row="2" Content="DeleteLayer" Click="btnDeleteLayer_Click"/>
        <TextBox Margin="29,12,331,6" x:Name="text_2" Grid.Column="1" Grid.Row="2"/>
    </Grid>
</Window>