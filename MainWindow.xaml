<Window x:Class="PhotoEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoEditor"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="600"
        Width="1200" 
        WindowStartupLocation="CenterScreen"
        Loaded="MainWindow_Loaded">
    <Grid Margin="0,0,3.6,47.4">

        <Grid.RowDefinitions>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="209*"/>
            <RowDefinition Height="42*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="18*" />
            <ColumnDefinition Width="352*" />
            <ColumnDefinition Width="621*"/>
            <ColumnDefinition Width="181*"/>
            <ColumnDefinition Width="21*" />
        </Grid.ColumnDefinitions>
        <Canvas x:Name="mainCanvas" Grid.Row="1" Grid.ColumnSpan="4" Margin="18,0.4,179.6,46.2" Grid.RowSpan="2"/>
        <StackPanel x:Name="layerCanvas" Grid.Column="3" Grid.Row="1" Height="493" VerticalAlignment="Top" Background="LightSkyBlue" Grid.ColumnSpan="2" Margin="0.4,0.4,20.4,0" Grid.RowSpan="2">

        </StackPanel>
        <TextBox Margin="18,13.8,305.6,6.2" x:Name="text" Grid.Row="2" Grid.ColumnSpan="2"/>
        <Button Height="33" HorizontalAlignment="Left" 
        Margin="12.4,0,0,6.2" Name="btnOpen" VerticalAlignment="Bottom" 
        Width="74" Grid.Column="2" Grid.Row="2" Click="btnOpen_Click">Open</Button>
        <Button Height="33" HorizontalAlignment="Left" 
            Margin="91.4,0,0,6.2" x:Name="btnSave" VerticalAlignment="Bottom" 
            Width="74" Grid.Column="2" Grid.Row="2" Content="Save" Click="btnSave_Click"/>
        <Button Height="33" HorizontalAlignment="Left" 
            Margin="170.4,0,0,6.2" x:Name="btnNewLayer" VerticalAlignment="Bottom" 
            Width="76" Grid.Column="2" Grid.Row="2" Content="NewLayer" Click="btnNewLayer_Click"/>
        <Button Height="33" HorizontalAlignment="Left" 
            Margin="535.4,0,0,6.2" x:Name="btnDeleteLayer" VerticalAlignment="Bottom" 
            Width="75" Grid.Column="2" Grid.Row="2" Content="DeleteLayer" Click="btnDeleteLayer_Click"/>
        <TextBox Margin="50.6,13.8,9.6,6.2" x:Name="text_2" Grid.Column="1" Grid.Row="2"/>
        <Button Height="33" HorizontalAlignment="Left" 
            Margin="251.4,0,0,6.2" x:Name="btnEffect" VerticalAlignment="Bottom" 
            Width="76" Grid.Column="2" Grid.Row="2" Content="Effect" Click="btnEffect_Click"/>
        <Button Height="33" HorizontalAlignment="Left" 
            Margin="350.4,0,0,6.2" x:Name="btnGrayscale" VerticalAlignment="Bottom" 
            Width="76" Grid.Column="2" Grid.Row="2" Content="ЧБ" Click="Grayscale"/>
        <Button Height="33" HorizontalAlignment="Left" 
            Margin="450.4,0,0,6.2" x:Name="btnGaussianBlur" VerticalAlignment="Bottom" 
            Width="76" Grid.Column="2" Grid.Row="2" Content="Размытие" Click="GaussianBlur"/>
        <Button Height="33" HorizontalAlignment="Left" 
            Margin="251,0,0,50" x:Name="btnSobelFilter" VerticalAlignment="Bottom" 
            Width="76" Grid.Column="2" Grid.Row="2" Content="Собеля" Click="SobelFilter"/>
        <Button Height="33" HorizontalAlignment="Left" 
            Margin="350,0,0,50" x:Name="btnSobelFilterGrayscale" VerticalAlignment="Bottom" 
            Width="76" Grid.Column="2" Grid.Row="2" Content="Собеля ЧБ" Click="SobelFilterGrayscale"/>
        <Button Height="33" HorizontalAlignment="Left" 
            Margin="450,0,0,50" x:Name="btnRotate90" VerticalAlignment="Bottom" 
            Width="76" Grid.Column="2" Grid.Row="2" Content="Поворот" Click="Rotate90"/>
    </Grid>

</Window>