<Window x:Class="PhotoEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoEditor"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="600"
        Width="1200" 
        WindowStartupLocation="CenterScreen"
        Loaded="MainWindow_Loaded"
        Background="DarkGray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="209*"/>
            <RowDefinition Height="42*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="18*" />
            <ColumnDefinition Width="361*" />
            <ColumnDefinition Width="573*"/>
            <ColumnDefinition Width="240*"/>
        </Grid.ColumnDefinitions>
        <Canvas 
            x:Name="mainCanvas" 
            Grid.Column="1" 
            Grid.Row="1" 
            Grid.ColumnSpan="2"
            MouseLeftButtonDown="mainCanvas_MouseLeftButtonDown"
            MouseLeftButtonUp="mainCanvas_MouseLeftButtonUp"
            MouseMove="mainCanvas_MouseMove" Margin="10,0,0,0"/>
        <ScrollViewer
            Grid.Column="3" 
            Grid.Row="1"
            Background="Gainsboro"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBox
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                MouseLeftButtonDown="widgetCanvas_MouseDown"
                x:Name="widgetsCanvas"
                VerticalAlignment="Top">
            </ListBox>
        </ScrollViewer>
        
        
        
        <TextBox Margin="0,12,306,6" x:Name="text" Grid.Column="1" Grid.Row="2"/>
        <Button Height="33" HorizontalAlignment="Left" 
        Margin="12.4,0,0,6.2" Name="btnOpen" VerticalAlignment="Bottom" 
        Width="74" Grid.Column="2" Grid.Row="2" Click="btnOpen_Click">Open</Button>
        <Button Height="33" HorizontalAlignment="Left" 
            Margin="91.4,0,0,6.2" x:Name="btnSave" VerticalAlignment="Bottom" 
            Width="74" Grid.Column="2" Grid.Row="2" Content="png" Click="btnSavePng"/>
        <Button Height="33" HorizontalAlignment="Left" 
            Margin="170.4,0,0,6.2" x:Name="btnNewLayer" VerticalAlignment="Bottom" 
            Width="76" Grid.Column="2" Grid.Row="2" Content="NewLayer" Click="btnNewLayer_Click"/>
        <Button Height="33" HorizontalAlignment="Left"
            Margin="535,0,0,6" x:Name="btnDeleteLayer" VerticalAlignment="Bottom" 
            Width="75" Grid.Column="2" Grid.Row="2" Content="DeleteLayer" Click="btnDeleteLayer_Click" Grid.ColumnSpan="2"/>
        <TextBox Margin="51,12,10,6" x:Name="text_2" Grid.Column="1" Grid.Row="2"/>
        <Button Height="33" HorizontalAlignment="Left" 
            Margin="251.4,0,0,6.2" x:Name="btnEffect" VerticalAlignment="Bottom" 
            Width="76" Grid.Column="2" Grid.Row="2" Content="Effect" Click="btnEffect_Click"/>
        <Button Height="33" HorizontalAlignment="Left" 
            Margin="350.4,0,0,6.2" x:Name="btnGrayscale" VerticalAlignment="Bottom" 
            Width="76" Grid.Column="2" Grid.Row="2" Content="ЧБ" Click="Grayscale"/>
        <Button Height="33" HorizontalAlignment="Left" 
            Margin="450.4,0,0,6.2" x:Name="btnGaussianBlur" VerticalAlignment="Bottom" 
            Width="76" Grid.Column="2" Grid.Row="2" Content="Размытие" Click="GaussianBlur"/>
        <Button Height="33" HorizontalAlignment="Left" 
            Margin="251,0,0,50" x:Name="btnSobelFilter" VerticalAlignment="Bottom" 
            Width="76" Grid.Column="2" Grid.Row="2" Content="Собеля" Click="SobelFilter"/>
        <Button Height="33" HorizontalAlignment="Left" 
            Margin="150,0,0,50" x:Name="savetojpg" VerticalAlignment="Bottom" 
            Width="76" Grid.Column="2" Grid.Row="2" Content="jpg" Click="SaveToJpg"/>
        <Button Height="33" HorizontalAlignment="Left" 
            Margin="50,0,0,50" x:Name="savetobmp" VerticalAlignment="Bottom" 
            Width="76" Grid.Column="2" Grid.Row="2" Content="bmp" Click="SaveToBmp"/>
        <Button Height="33" HorizontalAlignment="Left" 
            Margin="350,0,0,50" x:Name="btnSobelFilterGrayscale" VerticalAlignment="Bottom" 
            Width="76" Grid.Column="2" Grid.Row="2" Content="Собеля ЧБ" Click="SobelFilterGrayscale"/>
        <Button Height="33" HorizontalAlignment="Left" 
            Margin="450,0,0,50" x:Name="btnRotate90" VerticalAlignment="Bottom" 
            Width="76" Grid.Column="2" Grid.Row="2" Content="Поворот" Click="Rotate90"/>
    </Grid>

</Window>